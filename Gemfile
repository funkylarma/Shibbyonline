source "https://rubygems.org"
ruby "2.0.0"

##### For development
group :development do
  gem 'foreman'
end

##### Basic Set up for rack
gem 'rack'

##### Add Jekyll
gem 'jekyll'
gem 'rack-jekyll', :git => 'https://github.com/adaoraul/rack-jekyll.git', :require => 'rack/jekyll'

#### For the Server
gem 'unicorn'
gem 'rack-cache'

#### For the heroku add-ons
gem 'newrelic_rpm'